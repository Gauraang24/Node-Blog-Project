<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head')%>
    <title>Blogs</title>
</head>
<body>
    <%- include('./partials/navbar')%>

    <div class="container mt-4">
        <h1><%= blog.title %></h1>
        <img src="/<%= blog.coverImageURL %>" alt="" width="700px"/>
        <pre><%= blog.body %></pre>
    </div>

    <div class="container mt-4">
        <img src="<%= blog.createdBy.profileImageUrl %>" width="50px" alt=""><%= blog.createdBy.fullName %>
    </div>

    <div class="container mt-3">

        <% if (locals.user) { %>
            <h1>Comments (<%= comment.length %>)</h1>
            <form action="blog/comment/<%= blog._id %>" method="post">
                <div class="m-3">
                    <input
                     type="text" 
                     name="content" 
               
                     class="form-control" 
                     placeholder="Enter your comment">
                </div>
                <button class="btn btn-sm btn-primary" type="submit">Add Comment</button>
            </form>
        <% } %>

        <% comment.forEach(comment => { %>
            <div class="container mt-4">
                <img src="<%= comment.createdBy.profileImageUrl %>" width="50px" alt="">
                <%= comment.createdBy.fullName %> : <pre><%= comment.content %></pre>
            </div>
         
        <% }) %>

    </div>

    <%- include('./partials/script')%>
</body>
</html>